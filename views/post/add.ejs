<% include ../layout/header.ejs %>
  <div class="main">
    <div class="container">
      <div class="content add-post">

        <!-- === форма для добавления постов === -->
        <form method="POST" class="post-form">
          <h2>Добавление поста</h2>
          <div class="form-group">
            <label for="post-title">Заголовок</label>
            <input type="text" id="post-title" name="title" />
          </div>
          <div class="form-group">
            <label for="post-body">Текст комментария</label>
            <textarea id="post-body"></textarea>
          </div>
          <div class="buttons">
            <button class="save-button secondary-inverse">Сохранить как черновик</button>
            <button class="publish-button">Опубликовать</button>
          </div>
        </form>

        <!-- === форма для загрузки картинок === -->
        <form action="POST" enctype="multipart/form-data" id="fileinfo">
          <input type="file" name="file" id="file" required>
          <button class="upload-button">Загрузить</button>
        </form>

      </div>
      <% include ../layout/sidebar.ejs %>
    </div>
  </div>

  <% include ../layout/footer.ejs %>